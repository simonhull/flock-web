DATABASE_URL=file:local.db

# Font Awesome Pro (required for pnpm install)
# Get token from Font Awesome account settings
FONTAWESOME_NPM_AUTH_TOKEN=

# Email provider: 'console' (dev, logs to stdout) or 'zepto' (production)
EMAIL_PROVIDER=console

# Zepto Mail (required when EMAIL_PROVIDER=zepto)
ZEPTO_MAIL_TOKEN=
ZEPTO_MAIL_FROM=noreply@myflock.app
ZEPTO_MAIL_FROM_NAME=Flock

# Auth base URL for email links (optional, defaults to request origin)
# Set this to your LAN IP when testing from mobile devices, e.g.:
# AUTH_BASE_URL=http://192.168.1.100:5173
AUTH_BASE_URL=
