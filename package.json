{
	"name": "flock",
	"pnpm": {
		"onlyBuiltDependencies": ["better-sqlite3"]
	},
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "wrangler pages dev .svelte-kit/cloudflare",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:quick": "playwright test --reporter=list",
		"test:e2e:ui": "playwright test --ui",
		"test:server": "pnpm db:reset && pnpm build && pnpm preview",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "bash -c 'for f in drizzle/*.sql; do wrangler d1 execute flock-local --local --file=\"$f\"; done'",
		"db:reset": "pkill -f wrangler || true; rm -rf .wrangler/state && pnpm db:migrate:local",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"better-auth": "^1.4.7",
		"better-svelte-email": "^1.1.0",
		"lucide-svelte": "^0.562.0",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^6.7.1",
		"@cloudflare/workers-types": "^4.20251218.0",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.562.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24",
		"@vitest/browser-playwright": "^4.0.15",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.0",
		"eslint": "^9.39.1",
		"eslint-plugin-better-tailwindcss": "^3.8.0",
		"playwright": "^1.57.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1",
		"wrangler": "^4.56.0"
	}
}
